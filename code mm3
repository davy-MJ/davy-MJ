       if(nameAffliction=="handicap√©"){
        AfflictionText="---‚ö†Ô∏è <b>handicap√©</b> --- [x](!mm3_change_etat --Affliction handicap√©) <div style='font-size:9px'>Un personnage handicap√© est victime d‚Äôun malus de circonstances de ‚àí5 √† ses tests. Si le malus s‚Äôapplique √† des tests sp√©cifiques, ces derniers sont ajout√©s au nom de l‚Äô√©tat, par exemple : Attaque handicap√©e, Combativit√© handicap√©e, Perception handicap√©e, etc. Si invalide s‚Äôapplique √©galement au(x) m√™me(s) trait(s), il pr√©vaut sur handicap√©</div>"+moins5test;
    }
       if(nameAffliction=="immobile"){
        AfflictionText="---‚ö†Ô∏è <b>immobile</b> --- [x](!mm3_change_etat --Affliction immobile) <div style='font-size:9px'>Les personnages immobilis√©s n‚Äôont aucune vitesse de mouvement et ne peuvent quitter l‚Äôendroit o√π ils sont mais ils peuvent toujours effectuer des actions, sauf si cela est proscrit par un autre √©tat</div>"+zeromouvement;
    }
       if(nameAffliction=="influenc√©"){
        AfflictionText="---‚ö†Ô∏è <b>influenc√©</b> --- [x](!mm3_change_etat --Affliction influenc√©) <div style='font-size:9px'> un personnage influenc√© est gouvern√© par une force ext√©rieure contre laquelle il doit lutter ; le personnage ne peut qu‚Äôeffectuer des actions libres et une seule action simple par tour, ces deux types d‚Äôactions √©tant choisis par la personne qui le contr√¥le. Comme d‚Äôhabitude, cette action simple peut √™tre chang√©e en action de mouvement. Contr√¥l√© pr√©vaut sur influenc√©.</div>";
    }
      if(nameAffliction=="invalide"){
        AfflictionText="---‚ö†Ô∏è <b>invalide</b>  --- [x](!mm3_change_etat --Affliction invalide) <div style='font-size:9px'> Une ou plusieurs des caract√©ristiques du personnage deviennent inf√©rieures √† ‚àí5 (voir Caract√©ristiques invalid√©es dans le chapitre Caract√©ristiques).</div>"+moins5test;
    }
     if(nameAffliction=="paralys√©"){
        AfflictionText="---‚ö†Ô∏è <b>paralys√©</b> --- [x](!mm3_change_etat --Affliction paralys√©) <div style='font-size:9px'> Un personnage paralys√© est sans d√©fense, immobile et physiquement √©tourdi, fig√© sur place et incapable de bouger mais n√©anmoins conscient de ce qui se passe autour de lui et capable d‚Äôeffectuer des actions purement mentales n‚Äôimpliquant aucun mouvement physique, quel qu‚Äôil soit."+sansdefense+zeroaction;
    }
    return AfflictionText;
}

/*--------------------------Appel changement d'etat --------------------------------*/
on("chat:message", function (msg) {
    if (msg.type == "api" && msg.content.indexOf("!mm3_change_etat") !== -1) {
       
        var parts = msg.content.split(" ");
       parseOption(parts);
       
        var selected = msg.selected;
      
        if (selected===undefined)
            {
                sendChat("API","You must first select a token");
                return;
            }
        var_tokenid=selected[0]._id;
        let tok = getObj("graphic",selected[0]._id);
        var_target = tok.get("represents");
        
        name_defenser = tok.get("name");

        var bar2_value = tok.get("bar2_value")
        //var sante_target = getAttrByName(var_target, "sante");
        //var etat_target = getAttrByName(var_target, "etat");
        
        log(var_name_affliction);
        if(var_name_affliction)
        {
        
            var index = bar2_value.indexOf(var_name_affliction);
            
            if (index !=-1)
            {
                var new_bar2_value = deleteAflliction(var_name_affliction,bar2_value);
                
                sendChat("","‚ö†Ô∏è <b>"+var_name_affliction+"</b> a √©t√© envlev√© du personnage : "+name_defenser+" [voir etat](!mm3_etat) | [voir action](!mm3_actions)");
                sendChat("","!token-mod --ids "+var_tokenid+" --set bar2_value|"+new_bar2_value +" statusmarkers|-"+var_name_affliction);
            }
            else
            {
                if(var_name_affliction=="normal")
                {
                   
                sendChat("","!token-mod --ids "+var_tokenid+" --set bar2_value| statusmarkers|statusmarkers|=blue|-blue");
                }
                else{
                sendChat("","!token-mod --ids "+var_tokenid+" --set bar2_value|"+var_name_affliction+","+bar2_value+" statusmarkers|"+var_name_affliction);
                }
            }

        }
        
        if(var_name_sante)
        {
           
             if(var_name_sante=="normal")
            {
                sendChat("","!setattr --charid "+var_target+" --sante|normal");
                sendChat("","!token-mod --ids "+var_tokenid+" --set statusmarkers|-h√©bet√©|-chancelant|-dead");
            }
            
            if(var_name_sante=="h√©bet√©")
            {
                sendChat("","!setattr --charid "+var_target+" --sante|h√©bet√©");
                sendChat("","!token-mod --ids "+var_tokenid+" --set statusmarkers|h√©bet√©");
            }
             if(var_name_sante=="chancelant")
            {
                 sendChat("","!setattr --charid "+var_target+" --sante|chancelant");
                 sendChat("","!token-mod --ids "+var_tokenid+" --set statusmarkers|chancelant");
            }
               if(var_name_sante=="neutralis√©")
            {
                  sendChat("","!setattr --charid "+var_target+" --sante|neutralis√©");
                  sendChat("","!token-mod --ids "+var_tokenid+" --set statusmarkers|dead");
            }
            
                if(var_name_sante=="mort")
            {
                  sendChat("","!setattr --charid "+var_target+" --sante|mort");
                  sendChat("","!token-mod --ids "+var_tokenid+" --set statusmarkers|dead");
            }
            
            
        }
        
        
    }
});

/*-------------------------suppression d'une afflication ---------------------------------*/

function deleteAflliction(mot,affliction) {

  var afflcitionArray = affliction.split(","); // Convertit la cha√Æne de caract√®res en un tableau en utilisant la virgule comme s√©parateur
  var index = afflcitionArray.indexOf(mot); // Trouve l'index du mot dans le tableau
  if (index > -1) { // V√©rifie si le mot est pr√©sent dans la cha√Æne de caract√®res
    afflcitionArray.splice(index, 1); // Supprime le mot du tableau
  }
  return afflcitionArray.join(","); // Convertit le tableau modifi√© en une cha√Æne de caract√®res en utilisant la virgule comme s√©parateur
}
 
 /*------------------------list abilities ---------------------------------*/
 
 function displayAbilities() {

  var abilities = findObjs({_type: "ability", _characterid: characterID}); // R√©cup√©rer toutes les abilities du personnage

Tabletop="<table border='0' style='border-collapse: collapse; width: 100%; background-color: #000000; color: #ffffff; text-align: center; height: 251px;'> <tbody>";
Tableheader="<tr style='height: 26px;'> <td style='width: 100%; background-image: url(\"https://t4.ftcdn.net/jpg/03/29/14/55/360_F_329145569_Vyu8Vex4JYnKbbjV43aFl1OXLSaijPi4.jpg\"); font-weight: bold; padding: 5px; color: white; font-size: 20px; text-shadow: #000000 2px 0px, #000000 -2px 0px, #000000 0px 2px, #000000 0px -2px, #000000 1px 1px, #000000 -1px -1px, #000000 1px -1px, #000000 -1px 1px; height: 26px;'>Actions</td> </tr> ";
TableImg="<tr style='height: 55px;'> <td style='width: 100%;'><img src='"+img_defenser+"' style='object-fit: cover; object-position: 100% 20%;' height='50px' width='50px' /><b>   "+name_defenser+"</b></td> </tr> ";
TableNameTarget="";
var Tableability="";
var Tableabilityattaque="";
var Tableabilityattaquetilte=""
 var TableAffliction="";

var sante_target = getAttrByName(characterID, "sante");
 var var_targetype = getAttrByName(characterID, "type");
 if(var_targetype!="sbire"){
             TableLine1="<tr style='height: 18px;'> <td style='width: 100%; height: 18px;'> <p>sante ="+sante_target+"</p></td> </tr> ";
        }
        else
        {
            TableLine1="";
        }

  _.each(abilities, function(ability) { // Pour chaque ability, ajouter une ligne √† la table avec un bouton pour lancer l'ability
    nameAbility = ability.get("name");
    

    
    if ( nameAbility.includes("attaque_")) {
    Tableabilityattaquetilte="<tr style='height: 50px;'> <td style='width: 100%; height: 50px;'><b>-----üí• Attaques -----</b></td> </tr>";
    let nameAbility_new = nameAbility.replace("attaque_", "");
    Tableabilityattaque +="<tr style='height: 30px;'> <td style='width: 100%; height: 40px;'>["+nameAbility_new+"](~selected|"+ability.get("name")+") </td></tr>";
    }
    else
    {
    Tableability += "<tr style='height: 30px;'> <td style='width: 100%; height: 40px;'>["+ability.get("name")+"](~selected|"+ability.get("name")+") </td></tr>";
    }
  });
  
      bar2_valueTab=bar2_value.split(",");
    
     for (var i = 0; i < bar2_valueTab.length; i++) {
             
             affliction_value = bar2_valueTab[i];
             if(!affliction_value)
             {
                 affliction_value="normal";
             }
             TableAffliction="<tr style='height: 18px;'> <td> <p style='font-size: 13px'>"+afflictionDescription(affliction_value)+"</p></td></tr>"+TableAffliction;
             // sendChat("","<p>"+afflictionDescription(affliction_value)+"</p>");
             
         }
  
  
  TableBasicability="<tr style='height: 50px;'> <td style='width: 100%; height: 50px;'><b>-----‚ö°Actions -----</b></td> </tr><tr style='height: 30px;'> <td style='width: 100%; height: 40px;'>[üí¢ d√©sarmer](!#desarmer)</td></tr>"

    TableBottom="</tbody> </table>";

  // Afficher la table dans le chat
   sendChat("",Tabletop+Tableheader+TableImg+TableNameTarget+TableLine1+TableAffliction+Tableabilityattaquetilte+Tableabilityattaque+Tableability+TableBasicability+TableBottom);
}


